v<p id="notice"><%= notice %></p>

<h1>Complain Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @complain_lists.each do |complain_list| %>
      <%if !current_user.admin? %>
      <tr>
        <td><%= complain_list.title %></td>
        <td><%= complain_list.description %></td>
        <td><%= complain_list.problem_status %></td>
        <td><%= link_to 'Show', complain_list %></td>

        <% if complain_list.problem_status=="completed"%>
          <td><%= link_to 'Destroy', complain_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end %>
          </tr>
    <%else %>
      <tr>
        <td><%= complain_list.title %></td>
        <td><%= complain_list.description %></td>
        <td><%= complain_list.problem_status %></td>
        <td><%= link_to 'Show', complain_list %></td>
        <td><%= link_to 'Edit', edit_complain_list_path(complain_list) %></td>

      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if !current_user.admin? %>
  <%= link_to 'New Complain List', new_complain_list_path %>
<%end %>